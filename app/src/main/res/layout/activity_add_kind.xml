<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.root.penulisanilmiah.AddKindActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Jenis"
        android:id="@+id/judul"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/White"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/add_photo_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_photo"
            android:id="@+id/add_kind_photo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Klik icon\nto add image"
            android:textColor="@color/White"
            android:id="@+id/tv_null_image"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Jenis: "
            android:textSize="20sp"
            android:textColor="@color/White"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg"
            android:padding="5dp"
            android:id="@+id/tipe_tanaman"
            android:inputType="text"
            android:hint="  Jenis tanaman"
            android:textColorHint="@color/White"
            android:textColor="@color/White"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cahaya: "
            android:textSize="20sp"
            android:textColor="@color/White"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cahayaideal"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_lgn_bg"
        android:text="Tambah Jenis"
        android:textColor="@color/White"
        android:textSize="18sp"
        android:id="@+id/btnAddKind"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="3dp"
        android:paddingBottom="2dp"/>
</LinearLayout>
